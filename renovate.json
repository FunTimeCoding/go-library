{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "k8s.io/api",
        "k8s.io/client-go",
        "k8s.io/metrics",
        "k8s.io/apimachinery"
      ],
      "allowedVersions": "<= v0.30.14"
    },
    {
      "matchPackageNames": ["github.com/google/gnostic-models"],
      "allowedVersions": "<= v0.6.9"
    },
    {
      "matchPackageNames": ["github.com/gdamore/tcell"],
      "allowedVersions": "< v3.0.0"
    },
    {
      "matchDatasources": ["go"],
      "matchPackageNames": ["github.com/kestra-io/client-sdk/go-sdk"],
      "matchUpdateTypes": ["digest"],
      "automerge": true
    },
    {
      "matchPackageNames": ["github.com/kestra-io/client-sdk/go-sdk"],
      "enabled": false
    }
  ]
}
